---
const {variant, size} = Astro.props;
---

<button class={variant + " " + size}><slot /></button>

<style>
    button {
        padding: 1rem;
        border-radius: 25px;
    }
    .primary{
        background-color: aqua;
        color: hotpink;
    }
    .secondary {
        background-color: hotpink;
        color: aqua;
    }
    .small {
        font-size: 1rem;
    }
    .medium{
        font-size: 2rem;
    }
    .large{
        font-size: 3rem;
    }
</style>